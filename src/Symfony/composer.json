{
    "name": "php-flasher/flasher-symfony",
    "type": "symfony-bundle",
    "homepage": "https://php-flasher.io",
    "description": "PHPFlasher Symfony Bundle: Supercharge your Symfony projects with this robust flash message package. Enhance user engagement with intuitive, easy-to-integrate flash messaging. Tailored for developers, PHPFlasher provides a powerful solution for managing user feedback in Symfony applications.",
    "keywords": [
        "php-flasher",
        "flash-messaging",
        "laravel",
        "symfony",
        "php",
        "noty",
        "notyf",
        "pnotify",
        "sweetalert",
        "toastr",
        "user-engagement",
        "user-experience",
        "developer-tools",
        "yoeunes"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Younes KHOUBZA",
            "email": "younes.khoubza@gmail.com",
            "homepage": "https://www.linkedin.com/in/younes-khoubza",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "php-flasher/flasher": "^1.15.1",
        "symfony/config": "^6.0|^7.0",
        "symfony/console": "^6.0|^7.0",
        "symfony/dependency-injection": "^6.0|^7.0",
        "symfony/http-kernel": "^6.0|^7.0"
    },
    "suggest": {
        "symfony/translation": "To translate flash messages, title and presets"
    },
    "autoload": {
        "psr-4": {
            "Flasher\\Symfony\\": ""
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
